<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardBackgroundColor="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearcarviewAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewAlbum"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:textColor="#000000"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="Vet Han Cua That Bai"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtenAlbum"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#372E2C"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:text="Son TÃ¹ng MTP"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtencasiAlbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
