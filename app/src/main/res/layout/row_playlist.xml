<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewBackgroundPlaylist"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="5dp"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/imageviewPlaylist"
        android:layout_alignBottom="@id/imageviewBackgroundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>
    <TextView
        android:background="#232323"
        android:textSize="13sp"
        android:text="Những Bài Hit Của"
        android:layout_alignBottom="@id/imageviewPlaylist"
        android:layout_toRightOf="@id/imageviewPlaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="#D5D2D2"
        android:id="@+id/textviewNamePlaylist"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
